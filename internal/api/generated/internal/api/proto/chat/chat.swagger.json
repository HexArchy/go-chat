{
  "swagger": "2.0",
  "info": {
    "title": "internal/api/proto/chat/chat.proto",
    "version": "version not set"
  },
  "host": "localhost:8082",
  "basePath": "/",
  "tags": [
    {
      "name": "ChatService"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/v1/chat/{roomId}/messages": {
      "get": {
        "summary": "GetMessages - получение истории сообщений комнаты.",
        "operationId": "ChatService_GetMessages",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/chatGetMessagesResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "roomId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32"
          }
        ],
        "tags": ["ChatService"]
      }
    },
    "/api/v1/chat/{roomId}/ws": {
      "get": {
        "summary": "Connect - установка WebSocket соединения.",
        "operationId": "ChatService_Connect",
        "responses": {
          "200": {
            "description": "A successful response.(streaming responses)",
            "schema": {
              "type": "object",
              "properties": {
                "result": {
                  "$ref": "#/definitions/chatChatEvent"
                },
                "error": {
                  "$ref": "#/definitions/rpcStatus"
                }
              },
              "title": "Stream result of chatChatEvent"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "roomId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "userId",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": ["ChatService"]
      }
    }
  },
  "definitions": {
    "ChatEventEventType": {
      "type": "string",
      "enum": ["UNKNOWN", "USER_JOINED", "USER_LEFT", "NEW_MESSAGE"],
      "default": "UNKNOWN"
    },
    "chatChatEvent": {
      "type": "object",
      "properties": {
        "roomId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "eventType": {
          "$ref": "#/definitions/ChatEventEventType"
        },
        "message": {
          "$ref": "#/definitions/chatMessage",
          "description": "опционально, для NEW_MESSAGE."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "chatGetMessagesResponse": {
      "type": "object",
      "properties": {
        "messages": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/chatMessage"
          }
        }
      }
    },
    "chatMessage": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "roomId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
